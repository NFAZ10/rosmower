<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  name="robot">

    <xacro:arg name="use_ros2_control" default="true"/>
    <xacro:arg name="sim_mode" default="false"/>

    <xacro:include filename="$(find rosmower)/description/inertial_macros.xacro" />
    <xacro:include filename="$(find rosmower)/description/robot_core.xacro" />

    <xacro:if value="$(arg use_ros2_control)">
        <xacro:include filename="$(find rosmower)/description/ros2_control.xacro" />
    </xacro:if>
    <xacro:unless value="$(arg use_ros2_control)">
        <xacro:include filename="$(find rosmower)/description/gazebo_control.xacro" />
    </xacro:unless>
    <xacro:include filename="$(find rosmower)/description/lidar.xacro" />
    <xacro:include filename="$(find rosmower)/description/camera.xacro" />
    <!-- <xacro:include filename="depth_camera.xacro" /> -->

    
</robot>