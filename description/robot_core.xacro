<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- Materials -->
    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>
    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>
    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <!-- Main hoverboard deck -->
    <link name="chassis">
        <visual>
            <geometry>
                <box size=".2 .5 0.05"/>
            </geometry>
            <material name="white"/>
            <origin xyz="0 0 .1" rpy="0 0 0"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.6 0.18 0.05"/>
            </geometry>
            <origin xyz="0 0 0.025" rpy="0 0 0"/>
        </collision>
        <inertial>
            <mass value="5.0"/>
            <origin xyz="0 0 0.025" rpy="0 0 0"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
        </inertial>
    </link>

    <!-- Left wheel -->
    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder length="0.05" radius="0.09"/>
            </geometry>
            <material name="black"/>
            <origin xyz="0 0.145 0.045" rpy="1.5708 0 0"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.05" radius="0.09"/>
            </geometry>
            <origin xyz="0 0.145 0.045" rpy="1.5708 0 0"/>
        </collision>
        <inertial>
            <mass value="0.5"/>
            <origin xyz="0 0.145 0.045" rpy="0 0 0"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
        </inertial>
    </link>

    <!-- Right wheel -->
    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder length="0.05" radius="0.09"/>
            </geometry>
            <material name="black"/>
            <origin xyz="0 -0.145 0.045" rpy="1.5708 0 0"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.05" radius="0.09"/>
            </geometry>
            <origin xyz="0 -0.145 0.045" rpy="1.5708 0 0"/>
        </collision>
        <inertial>
            <mass value="0.5"/>
            <origin xyz="0 -0.145 0.045" rpy="0 0 0"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
        </inertial>
    </link>

    <!-- Joints to attach wheels to chassis -->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="chassis"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.145 0.045" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>
    <joint name="right_wheel_joint" type="continuous">
        <parent link="chassis"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.145 0.045" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

</robot>